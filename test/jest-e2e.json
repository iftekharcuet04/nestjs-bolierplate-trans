{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": ".",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"@/modules/(.*)": "<rootDir>/../src/modules/$1",
		"@/config/(.*)": "<rootDir>/../src/config/$1",
		"@/logger/(.*)": "<rootDir>/../src/logger/$1",
		"@/utils/(.*)": "<rootDir>/../src/utils/$1"
	}
}
